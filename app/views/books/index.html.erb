<div class="col-md-12">
  <table class="table table-hover">
    <thead>
      <tr>
        <td>Series</td>
        <td>Price</td>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.series %></td>
          <td>$ <%= book.price %></td>
          <td>
            <%= link_to("加入购物车", add_to_cart_book_path(book),
                        method: :post, class: "btn btn-default") %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
